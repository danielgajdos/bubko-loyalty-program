{
  "name": "kebab-loyalty-program",
  "version": "1.0.0",
  "description": "Product-based loyalty program for Kebab na Kyjevskom with QR code tracking",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd backend && npm install",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "loyalty-program",
    "qr-code",
    "kebab",
    "fast-food",
    "vue",
    "nodejs",
    "mysql"
  ],
  "author": "Kebab na Kyjevskom",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}